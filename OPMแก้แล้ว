local function toggleWarpCompass(state)
    warpLoop = state
    if state then
        task.spawn(function()
            while warpLoop do
                for _, pos in ipairs(warpPoints) do
                    if not warpLoop then break end
                    initCharacter(player.Character or player.CharacterAdded:Wait())
                    hrp.CFrame = CFrame.new(pos)
                    task.wait(0.1)
                end
                task.wait(0.2)
            end
        end)
    end
end

